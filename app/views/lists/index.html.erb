<h1>Watch List</h1>
<div class="containerlist">
<h2> Lists</h2>
  <div class="cards">
  <% @lists.each do|list|%>
    <div class= "card-product">
     <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>
        <div class="card-product-infos">
          <h2><%= link_to list.name, list_path(list) %></h2><br>
          <p><%= link_to 'Delete', list_path(list), method: :delete, data: { confirm: "Are you sure?" } %></p>
          <br>
        </div>
    </div>
  <% end %>
  </div>
<%= link_to "Add a new list", new_list_path, class: "btn btn-gradient"%>
</div>
<h2>Movies</h2>
<div class="card-movies">
  <% @movies.each do|movie|%>
    <div class="card-trip">
      <img src="<%= movie.poster_url %>"/>
        <div class="card-trip-infos">
          <h2><%= movie.title %></h2>
          <div class="card-star"><%= movie.rating %>‚≠ê</div>
        </div>
    </div>
  <% end %>
</div>
